<%- include('../partials/header.ejs') %>

<h1>BIG BOARD LIST</h1>
    <% if (boards.length > 0) { %>
     <ul class="board-list" style="list-style-type: none;">
       <% boards.forEach(board => { %>
         <li>
           <a class="action-btn board-btn"  href="/boards/<%= board._id %>"><%= board.title %></a>
         </li>
       <% }) %>
     </ul>
   <% } else { %>
     <p>You have not created a Big Board yet...</p>
   <% } %>
   <a class="action-btn board-btn" href="/boards/new">Add New Big Board</a>





