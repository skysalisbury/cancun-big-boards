<%- include('../partials/header.ejs') %>
<img class="prospect-img" src="<%= prospect.image %>" alt="Prospect Image">
  <h1><%= prospect.name %></h1>
  <p><strong><%= prospect.age%>yrs <%= prospect.origin %></strong></p>
  <p><strong><%= prospect.height %>ft, <%= prospect.weight %>lbs, Wingspan of <%= prospect.wingspan %>ft</strong></p>
  <h3><%= prospect.team %> <%= prospect.position %></h3>
  <h4><strong>Description:</strong> <%= prospect.description %></h4>

      <% if (user._id.toString() === prospect.createdBy._id.toString()) { %>
    <a href="/prospects/<%= prospect._id %>/edit">Edit Player</a>
    <form action="/prospects/<%= prospect._id %>?_method=DELETE" method="POST">
        <button type="submit">Delete Player</button>
    </form>
  <% } %>

<!-- Add Player to Board Form -->
<% if (boards.length > 0) { %>
  <form action="/boards/add-prospect" method="POST">
    <input type="hidden" name="prospectId" value="<%= prospect._id %>">
    <label for="boardId">Add to Board:</label>
    <select name="boardId" id="boardId">
      <% boards.forEach(board => { %>
        <option value="<%= board._id %>"><%= board.title %></option>
      <% }) %>
    </select>
    <button type="submit">Add Player to Board</button>
  </form>
<% } else { %>
  <p>You don't have any boards yet. <a href="/boards/new">Create one</a></p>
<% } %>










<%- include('../partials/footer.ejs') %>