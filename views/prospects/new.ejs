<%- include('../partials/header.ejs') %>
<h1>New NBA Prospect</h1>

<form action="/prospects" method="POST">
    <label for="name">Name:</label>
  <input type="text" name="name" id="name" />

    <label for="age">Age:</label>
  <input type="number" name="age" id="age" />

    <label for="height">Height:</label>
  <input type="text" name="height" id="height" />

    <label for="wingspan">Wingspan:</label>
  <input type="text" name="wingspan" id="wingspan" />

    <label for="weight">Weight:</label>
  <input type="number" name="weight" id="weight" />

    <label for="position">Position:</label>
  <input type="text" name="position" id="position" />

    <label for="team">College/Team:</label>
  <input type="text" name="team" id="team" />

    <label for="stats">Stats (Top Three Any Category):</label>
  <input type="text" name="stats" id="stats" />

  <label for="description">Description:</label>
  <textarea name="description" id="description"></textarea>

  <button type="submit">Add Player</button>
</form> 
<%- include('../partials/footer.ejs') %>